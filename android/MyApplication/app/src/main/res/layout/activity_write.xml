<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.win10_pc.whichwish.WriteActivity">
    <TextView
        android:text="제목"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/title_et"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        android:layout_above="@+id/title_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/title_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/descriptiontext"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="normal" />

    <TextView
        android:text="내용"
        android:id="@+id/content_tv"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/content_et"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:layout_below="@+id/title_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/content_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/content_tv"
        android:background="@drawable/descriptiontext"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="normal" />

    <TextView
        android:text="주소"
        android:id="@+id/where_tv"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_alignLeft="@+id/where_et"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:layout_below="@+id/content_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/where_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below = "@+id/where_tv"
        android:background="@drawable/descriptiontext"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/ok_btn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="17dp"
        android:layout_marginTop="566dp"
        android:background="@drawable/descriptionok" />

</RelativeLayout>